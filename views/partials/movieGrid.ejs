<% movieCoverClass = locals.large ? 'movie-cover-large' : '' %>
<% movieGridClass = locals.large ? 'movie-grid-large' : '' %>
<div class="movie-grid">
    <% movies.forEach(movie => { %>
        <a href="/movies/<%= movie.id %>">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img src="<%= movie.coverImagePath %>" alt="" style="width:180px;height:270px;">
                    </div>
                    <div class="flip-card-back">
                        <h4><%= movie.title %></h4>
                        <p><%= movie.publishDate.toDateString() %></p>
                    </div>
                </div>
            </div>
        </a>
    <% }) %>
</div>
